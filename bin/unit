#!/bin/bash
set -e
cd "$(dirname "$0")"/..

set -x

if [[ ${DEBUGGER} ]]; then
  INTERACTIVE="-i -t"
  PDB="--pdb -s"
fi

DOCKER_IMAGE="armory/yamltools:unit"
docker build -f Dockerfile -t ${DOCKER_IMAGE} .
docker run ${INTERACTIVE} --rm \
    -v "$(pwd)/yamltools:/src/yamltools" \
    --workdir=/src \
    ${DOCKER_IMAGE} \
    nosetests -v --exclude="integration" ${PDB} ${@:2}
